@model LoginVM
<div class="breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col">
                <p class="bread"><span><a asp-action="Index" asp-controller="Home">Trang chủ</a></span> / <span>Đăng nhập</span></p>
            </div>
        </div>
    </div>
</div>

<div id="colorlib-contact">
	<div class="container">
		<div class="row">
			<div class="col-md-6">
				<div>
					<form method="post" class="contact-form">
						@if (ViewBag.Error != null)
						{
							<span class="text-danger">@ViewBag.Error</span>
						}
						<div class="row">
							<div class="col-md-12">
								<div class="form-group">
									<label>Tài khoản*</label>
									<input type="text" class="form-control" asp-for="UserName" placeholder="Tài khoản">
									<span asp-validation-for="UserName" class="text-danger"></span>
								</div>
							</div>
							<div class="w-100"></div>
							<div class="col-sm-12">
								<div class="form-group">
									<label>Password</label>
									<input type="password" class="form-control" asp-for="Password" placeholder="Mật khẩu">
									<span asp-validation-for="Password" class="text-danger"></span>
								</div>
							</div>
							<div class="col-sm-8 align-self-center">
								<div class="check-box">
									<input value="true" type="checkbox" id="remember_me">
									<label for="remember_me">Nhớ mật khẩu</label>
								</div>
							</div>
							<div class="col-sm-4 pt-1 mt-md-0">
								<div class="forgotton-password_info">
									<a href="#"> Quên mật khẩu?</a>
								</div>
							</div>
							<div class="w-100"></div>
							<div class="col-sm-12">
								<div class="form-group">
                                    <button type="submit" class="btn custom-btn md-size">Đăng nhập</button>
								</div>
							</div>
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <div class="forgotton-password_info">
                                        <span> Bạn chưa có tài khoản? <a asp-action="Register" asp-controller="Account" asp-area="Customer">Đăng ký</a></span>
                                    </div>
                                </div>
                            </div>
						</div>
					</form>
				</div>
			</div>
			<div class="col-md-6">

			</div>
		</div>
	</div>
</div>
