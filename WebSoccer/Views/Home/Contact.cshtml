@model Contact

<div class="breadcrumbs">
	<div class="container">
		<div class="row">
			<div class="col">
				<p class="bread"><span><a asp-action="Index" asp-controller="Home">Trang chủ</a></span> / <span>Liên hệ</span></p>
			</div>
		</div>
	</div>
</div>


<div id="colorlib-contact">
	<div class="container">
		<div class="row">
			<div class="col-sm-12">
				<h3>Contact Information</h3>
				<div class="row contact-info-wrap">
					<div class="col-md-3">
						<p><span><i class="icon-location"></i></span> K117,Nguyen Luong Bang <br> Da Nang</p>
					</div>
					<div class="col-md-3">
						<p><span><i class="icon-phone3"></i></span> <a href="tel://1234567920">+84 123456789</a></p>
					</div>
					<div class="col-md-3">
						<p><span><i class="icon-paperplane"></i></span> <a href="mailto:info@yoursite.com">admin@gmail.com</a></p>
					</div>
					<div class="col-md-3">
						<p><span><i class="icon-globe"></i></span> <a href="#">shopsoccer.com</a></p>
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-6">
				<div class="contact-wrap">
					<h3>Liên hệ với chúng tôi</h3>
					<form method="post" class="contact-form">
						<div class="row">
							<div class="col-md-12">
								<div class="form-group">
									<label for="lname">Tên</label>
									<input type="text" asp-for="Name" class="form-control" placeholder="Tên">
									<span asp-validation-for="Name" class="text-danger"></span>
								</div>
							</div>
							<div class="w-100"></div>
							<div class="col-sm-12">
								<div class="form-group">
									<label for="email">Email</label>
									<input type="text" asp-for="Email" class="form-control" placeholder="Email">
									<span asp-validation-for="Email" class="text-danger"></span>
								</div>
							</div>
							<div class="col-sm-12">
								<div class="form-group">
									<label for="email">Số điện thoại</label>
									<input type="text" asp-for="PhoneNumber" class="form-control" placeholder="Số điện thoại">
									<span asp-validation-for="PhoneNumber" class="text-danger"></span>
								</div>
							</div>
							<div class="w-100"></div>
							<div class="col-sm-12">
								<div class="form-group">
									<label for="subject">Tiêu đề</label>
									<input type="text" asp-for="Subject" class="form-control" placeholder="Tiêu đề">
									<span asp-validation-for="Subject" class="text-danger"></span>
								</div>
							</div>
							<div class="w-100"></div>
							<div class="col-sm-12">
								<div class="form-group">
									<label for="message">Nội dung</label>
									<textarea  asp-for="Message" cols="30" rows="10" class="form-control" placeholder="Nội dung"></textarea>
									<span asp-validation-for="Message" class="text-danger"></span>
								</div>
							</div>
							<div class="w-100"></div>
							<div class="col-sm-12">
								<div class="form-group">
									<input type="submit" value="Gửi" class="btn btn-primary">
								</div>
							</div>
						</div>
					</form>
				</div>
			</div>
			<div class="col-md-6">
				<img src="~/client-site//images/contact.png" widt="300px" height="500px"/>
			</div>
		</div>
	</div>
</div>