@using WebSoccer.Utility.Helpers;
@model OrderVM
<style>
    .btn-custom{
        background-color:red;
    }

    .bg-config{
        background:black;
    }
</style>
<div class="breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col">
                <p class="bread"><span><a asp-action="Index" asp-controller="Home">Trang chủ</a></span>/<span><a asp-action="Index" asp-controller="Order">Đơn hàng</a></span> / <span>Chi tiết</span></p>
            </div>
        </div>
    </div>
</div>

<div class="colorlib-product">
    <div class="container">
        <div class="card">
            <div class="card-body">
                <div class="card-body">
                    <div class="container rounded p-2">
                        <form method="post">
                            <input asp-for="@Model.OrderHeader.Id" hidden />
                            <div class="row">
                                <div class="col-12 col-lg-6 pb-4">
                                    <div class="row">
                                        <h4 class="d-flex justify-content-between align-items-center mb-3">
                                            <span class="text-primary">Thông tin:</span>
                                        </h4>
                                    </div>
                                    <div class="row my-1">
                                        <div class="col-3">Khách hàng</div>
                                        <div class="col-9">
                                            <input asp-for="OrderHeader.Name" readonly type="text" class="form-control" />
                                            <span asp-validation-for="OrderHeader.Name" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row my-1">
                                        <div class="col-3">Số điện thoại: </div>
                                        <div class="col-9">
                                            <input asp-for="OrderHeader.Phone" readonly type="text" class="form-control" />
                                            <span asp-validation-for="OrderHeader.Phone" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row my-1">
                                        <div class="col-3">Địa chỉ:</div>
                                        <div class="col-9">
                                            <input asp-for="OrderHeader.Address" readonly type="text" class="form-control" />
                                            <span asp-validation-for="OrderHeader.Address" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row my-1">
                                        <div class="col-3">Email</div>
                                        <div class="col-9">
                                            <input asp-for="OrderHeader.ApplicationUser.Email" readonly type="text" class="form-control" />
                                            <span asp-validation-for="OrderHeader.ApplicationUser.Email" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row my-1">
                                        <div class="col-3">Ngày đặt:</div>
                                        <div class="col-9">
                                            <input value="@Model.OrderHeader.OrderDate" readonly  type="text" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="row my-1">
                                        <div class="col-3">Ngày nhận:</div>
                                        <div class="col-9">
                                            <input value="@Model.OrderHeader.ShippingDate" readonly type="text" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="row my-1">
                                        <div class="col-3">Trạng thái:</div>
                                        <div class="col-9">
                                            <input asp-for="OrderHeader.PaymentStatus" readonly type="text" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-lg-5 offset-lg-1">
                                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="text-primary">Chi tiết</span>
                                    </h4>
                                    <ul class="list-group mb-3">
                                        @foreach (var detail in Model.OrderDetail)
                                        {
                                            <li class="list-group-item d-flex justify-content-between p-2">
                                                <div class="row container">
                                                    <div class="col-8">

                                                        <h6 class="my-0 text-primary">@detail.Product.Name</h6>
                                                        <small class="text-muted">Giá : @detail.Price.ToVnd()</small><br />
                                                        <small class="text-muted">Số lượng : @detail.Count</small>
                                                    </div>
                                                    <div class="col-4 text-end">
                                                        <p class="text-success">@((detail.Count * detail.Price).ToVnd())</p>
                                                    </div>
                                                </div>
                                            </li>
                                        }
                                        <li class="bg-config list-group-item badge-success">
                                            <div class="row container">
                                                <div class="col-6">
                                                    <h5 class="text-white">Tổng:</h5>
                                                </div>
                                                <div class="col-6 text-end">
                                                    <h5 class="text-white">@Model.OrderHeader.OrderTotal.ToVnd()</h5>
                                                </div>
                                            </div>
                                        </li>       
                                    </ul>                        
                                    @if (Model.OrderHeader.OrderStatus != SD.StatusCancelled &&
                                    Model.OrderHeader.OrderStatus != SD.StatusShipped)
                                    {
                                        <button asp-action="CancelOrder" type="submit" class="btn btn-custom m-r-5 form-control my-1">Huỷ đơn hàng</button>
                                    }                
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

