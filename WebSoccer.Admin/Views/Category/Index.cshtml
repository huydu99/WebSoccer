@model List<Category>

<!-- Content Wrapper START -->
<div class="main-content">
    <div class="page-header">
        <h2 class="header-title">Danh mục</h2>
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a href="#" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Dashboard</a>
                <span class="breadcrumb-item active">Quản lý danh mục</span>
            </nav>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="row m-b-30">
                <div class="col-lg-8">
                    <div class="d-md-flex">
                        <div class="m-b-10 m-r-15">
                        </div>
                        <div class="m-b-10">
                        </div>
                    </div>
                </div>
                <a class="col-lg-4 text-right" asp-action="Create" asp-controller="Category" asp-area="Admin">
                    <botton class="btn btn-primary">
                        <i class="anticon anticon-plus-circle m-r-5"></i>
                        <span>Thêm danh mục</span>
                    </botton>
                </a>
            </div>
            <div class="table-responsive">
                <table id="tblData" class="table table-hover e-commerce-table">
                    <thead>
                        <tr>
                            <th>Danh mục</th>
                            <th>Mô tả</th>
                            <th>Ngày cập nhật</th>
                            <th>Trạng thái</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script>
        var datatbl;
        $(document).ready(function () {
            loadDataTable();
        });
        function loadDataTable() {
            datatbl = $('#tblData').DataTable({
                'ordering': true,
                'order': [[2, 'desc']],
                'paging': false,
                'searching': false,
                'info': false,
                'autoWidth': false,
                'lengChange': false,
                'bordering': false,
                "ajax": { url: '/admin/category/getall' },
                "columns": [
                    { data: 'name', "width": "20%" },
                    { data: 'description', "width": "25%" },
                    {
                        data: 'createAt',
                        "render": function (data) {
                            var date = new Date(data);
                            return date.toLocaleString()
                        },
                        "width": "15%"
                    },
                    {
                        data: 'status',
                        "render": function (data) {
                            if (data) {
                                return `<span class="badge badge-success badge-dot m-r-10"></span>
                                                    <span>@SD.Active</span>`
                            } else {
                                return `<span class="badge badge-danger badge-dot m-r-10"></span>
                                                    <span>@SD.Inactive</span>`
                            }
                        },
                        "width": "15%"
                    },
                    {
                        data: 'id',
                        "render": function (data) {
                            return ` <div class="w-75 btn-group" role="group">
                                        <a href="/admin/category/edit?id=${data}" class="btn btn-primary btn-tone m-r-5">
                                                   <i class="anticon anticon-edit"></i>
                                        </a>
                                            <a onClick=Delete('/admin/category/delete/${data}') class="btn btn-danger btn-tone m-r-5 delete-btn">
                                                    <i class="anticon anticon-delete"></i>
                                        </a>
                                    </div>`
                        },
                        "width": "10%"
                    },
                ]
            });
        }

        function Delete(url) {
            Swal.fire({
                title: 'Bạn có muốn xoá?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Đồng ý!',
                cancelButtonText:"Huỷ"
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: url ,
                        type: 'DELETE',
                        success: function (data) {
                            datatbl.ajax.reload();
                            toastr.success(data.message);
                        }
                    })
                }
            })
        }
    </script>
}


